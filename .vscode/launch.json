    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Check installation",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["check-installation"],
            "program": "${workspaceFolder}\\index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Initial-sync",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["initial-sync"],
            "program": "${workspaceFolder}\\index.js"
        }
    ]
}